<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditProfileActivity" >

    <EditText
        android:id="@+id/profile_name_edittext2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="profile" />

    <Spinner
        android:id="@+id/wifi_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name_edittext2"
        android:entries="@array/on_off_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name_edittext2"
        android:layout_toRightOf="@+id/wifi_status2"
        android:text="Wi-Fi" />

    <Spinner
        android:id="@+id/bluetooth_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_status2"
        android:entries="@array/on_off_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_status2"
        android:layout_toRightOf="@+id/bluetooth_status2"
        android:text="Bluetooth" />

    <Spinner
        android:id="@+id/vibration_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluetooth_status2"
        android:entries="@array/on_off_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluetooth_status2"
        android:layout_toRightOf="@+id/vibration_status2"
        android:text="Vibration" />


    <Spinner
        android:id="@+id/volume_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vibration_status2"
        android:entries="@array/vol_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vibration_status2"
        android:layout_toRightOf="@+id/volume_status2"
        android:text="Volume" />

</RelativeLayout>